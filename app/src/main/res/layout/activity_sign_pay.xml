<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F5F5"
        tools:context=".MainActivity">

        <View
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/globe_dimen_84"
            android:background="@color/color_FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/globe_dimen_42"
            android:layout_height="@dimen/globe_dimen_42"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:background="@mipmap/icon_page_back"
            app:layout_constraintBottom_toBottomOf="@+id/title_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_layout" />

        <View
            android:id="@+id/title_back_btn"
            android:layout_width="@dimen/globe_dimen_100"
            android:layout_height="@dimen/globe_dimen_84"
            app:layout_constraintBottom_toBottomOf="@+id/title_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_layout" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_30"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/title_layout"
            app:layout_constraintEnd_toEndOf="@+id/title_layout"
            app:layout_constraintStart_toStartOf="@+id/title_layout"
            app:layout_constraintTop_toTopOf="@+id/title_layout" />

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/globe_dimen_84"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:layout_marginBottom="@dimen/globe_dimen_30"
            android:background="@drawable/blue_corner_15"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/font_text_size_30"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/user_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_30"
            android:text="考生信息:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/globe_dimen_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_layout" />

        <View
            android:id="@+id/info_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/globe_dimen_188"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_20"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:background="@drawable/white_corner_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_info_title" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toTopOf="@+id/provice_tv"
            app:layout_constraintStart_toStartOf="@+id/info_layout"
            app:layout_constraintTop_toTopOf="@+id/info_layout" />

        <TextView
            android:id="@+id/provice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toTopOf="@+id/id_card_tv"
            app:layout_constraintStart_toStartOf="@+id/info_layout"
            app:layout_constraintTop_toBottomOf="@+id/name_tv" />

        <TextView
            android:id="@+id/id_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toBottomOf="@+id/info_layout"
            app:layout_constraintStart_toStartOf="@+id/info_layout"
            app:layout_constraintTop_toBottomOf="@+id/provice_tv" />

        <TextView
            android:id="@+id/major_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_30"
            android:text="招生专业信息:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/globe_dimen_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_layout" />


        <View
            android:id="@+id/major_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/globe_dimen_138"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_20"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:background="@drawable/white_corner_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/major_info_title" />

        <TextView
            android:id="@+id/major_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toTopOf="@+id/major_time_tv"
            app:layout_constraintStart_toStartOf="@+id/major_layout"
            app:layout_constraintTop_toTopOf="@+id/major_layout" />

        <TextView
            android:id="@+id/major_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toBottomOf="@+id/major_layout"
            app:layout_constraintStart_toStartOf="@+id/major_layout"
            app:layout_constraintTop_toBottomOf="@+id/major_name_tv" />

        <TextView
            android:id="@+id/pay_method_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_30"
            android:text="支付方式:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/globe_dimen_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/major_layout" />

        <View
            android:id="@+id/pay_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/globe_dimen_166"
            android:layout_marginStart="@dimen/globe_dimen_30"
            android:layout_marginTop="@dimen/globe_dimen_20"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:background="@drawable/white_corner_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_method_tv" />

        <ImageView
            android:id="@+id/wechat_icon"
            android:layout_width="@dimen/globe_dimen_58"
            android:layout_height="@dimen/globe_dimen_58"
            android:layout_marginStart="@dimen/globe_dimen_20"
            android:background="@mipmap/icon_wechat"
            app:layout_constraintBottom_toTopOf="@+id/ali_icon"
            app:layout_constraintStart_toStartOf="@+id/pay_layout"
            app:layout_constraintTop_toTopOf="@+id/pay_layout" />

        <TextView
            android:id="@+id/wechat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_12"
            android:text="微信支付"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toBottomOf="@+id/wechat_icon"
            app:layout_constraintStart_toEndOf="@+id/wechat_icon"
            app:layout_constraintTop_toTopOf="@+id/wechat_icon" />

        <ImageView
            android:id="@+id/wechat_radio"
            android:layout_width="@dimen/globe_dimen_36"
            android:layout_height="@dimen/globe_dimen_36"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:background="@mipmap/icon_ok_small_white"
            app:layout_constraintBottom_toBottomOf="@+id/wechat_icon"
            app:layout_constraintEnd_toEndOf="@+id/pay_layout"
            app:layout_constraintTop_toTopOf="@+id/wechat_icon" />

        <View
            android:id="@+id/wechat_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ali_btn"
            app:layout_constraintTop_toTopOf="@+id/pay_layout" />

        <View
            android:id="@+id/ali_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/pay_layout"
            app:layout_constraintTop_toBottomOf="@+id/wechat_btn" />

        <ImageView
            android:id="@+id/ali_icon"
            android:layout_width="@dimen/globe_dimen_58"
            android:layout_height="@dimen/globe_dimen_58"
            android:layout_marginStart="@dimen/globe_dimen_20"
            android:background="@mipmap/icon_ali_pay"
            app:layout_constraintBottom_toBottomOf="@+id/pay_layout"
            app:layout_constraintStart_toStartOf="@+id/pay_layout"
            app:layout_constraintTop_toBottomOf="@+id/wechat_icon" />

        <TextView
            android:id="@+id/ali_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/globe_dimen_12"
            android:text="支付宝支付"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_text_size_26"
            app:layout_constraintBottom_toBottomOf="@+id/ali_icon"
            app:layout_constraintStart_toEndOf="@+id/ali_icon"
            app:layout_constraintTop_toTopOf="@+id/ali_icon" />

        <ImageView
            android:id="@+id/ali_radio"
            android:layout_width="@dimen/globe_dimen_36"
            android:layout_height="@dimen/globe_dimen_36"
            android:layout_marginEnd="@dimen/globe_dimen_30"
            android:background="@mipmap/icon_ok_small_empty"
            app:layout_constraintBottom_toBottomOf="@+id/ali_icon"
            app:layout_constraintEnd_toEndOf="@+id/pay_layout"
            app:layout_constraintTop_toTopOf="@+id/ali_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>