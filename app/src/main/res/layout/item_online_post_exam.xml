<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <View
        android:id="@+id/main_bg"
        android:layout_width="@dimen/globe_dimen_240"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:background="@drawable/f5_corner_10"
        />

    <ImageView
        android:id="@+id/top_cover_img"
        android:layout_width="@dimen/globe_dimen_220"
        android:layout_height="@dimen/globe_dimen_120"
        android:layout_marginTop="@dimen/globe_dimen_8"
        app:layout_constraintEnd_toEndOf="@+id/main_bg"
        app:layout_constraintStart_toStartOf="@+id/main_bg"
        app:layout_constraintTop_toTopOf="@+id/main_bg" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/globe_dimen_8"
        android:layout_marginTop="@dimen/globe_dimen_18"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_text_size_24"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/main_bg"
        app:layout_constraintTop_toBottomOf="@+id/top_cover_img"
        tools:text="赵本山" />

    <TextView
        android:id="@+id/subject_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_18"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="科目："
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:id="@+id/subject_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="科目："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toEndOf="@+id/subject_tv"
        app:layout_constraintTop_toTopOf="@+id/subject_tv" />

    <TextView
        android:id="@+id/point_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="打分："
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/subject_tv" />

    <TextView
        android:id="@+id/point_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="科目："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toEndOf="@+id/point_tv"
        app:layout_constraintTop_toTopOf="@+id/point_tv" />

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="评语："
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/point_tv" />

    <TextView
        android:id="@+id/comment_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="@+id/main_bg"
        android:layout_marginEnd="@dimen/globe_dimen_8"
        tools:text="科目："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_text_size_20"
        app:layout_constraintStart_toEndOf="@+id/comment_tv"
        app:layout_constraintTop_toTopOf="@+id/comment_tv" />

    <TextView
        android:id="@+id/go_point_btn"
        android:layout_width="@dimen/globe_dimen_130"
        android:layout_height="@dimen/globe_dimen_46"
        app:layout_constraintStart_toStartOf="@+id/main_bg"
        app:layout_constraintEnd_toEndOf="@+id/main_bg"
        app:layout_constraintBottom_toBottomOf="@+id/main_bg"
        android:layout_marginBottom="@dimen/globe_dimen_18"
        android:background="@drawable/blue_empty_corner_15"
        android:text="去评分"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/font_text_size_24"
        android:textColor="@color/color_52618B"

        />


</androidx.constraintlayout.widget.ConstraintLayout>