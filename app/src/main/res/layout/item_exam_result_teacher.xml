<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="@dimen/globe_dimen_72"
        android:layout_height="@dimen/globe_dimen_72"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:layout_marginTop="@dimen/globe_dimen_30"
        android:background="@mipmap/icon_default_user_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/globe_dimen_20"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_text_size_28"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toTopOf="@+id/head_icon"
        tools:text="评委老师1" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/globe_dimen_30"
        android:textColor="@color/color_52618B"
        android:textSize="@dimen/font_text_size_28"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head_icon"
        tools:text="优秀" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/globe_dimen_20"
        android:layout_marginTop="@dimen/globe_dimen_20"
        android:layout_marginEnd="@dimen/globe_dimen_30"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="评委老师1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/globe_dimen_2"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:layout_marginTop="@dimen/globe_dimen_30"
        android:layout_marginEnd="@dimen/globe_dimen_30"
        android:background="@color/color_F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/comment" />


</androidx.constraintlayout.widget.ConstraintLayout>