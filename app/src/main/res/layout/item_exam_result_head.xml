<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/globe_dimen_144">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <TextView
        android:id="@+id/left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_30"
        android:text="综合评级"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/globe_dimen_24"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/left_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优秀"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_text_size_36"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/left_title"
        app:layout_constraintStart_toStartOf="@+id/left_title"
        app:layout_constraintTop_toBottomOf="@+id/left_title" />

    <TextView
        android:id="@+id/right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_30"
        android:text="考试结果"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/globe_dimen_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/right_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_text_size_36"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_title"
        app:layout_constraintStart_toStartOf="@+id/right_title"
        app:layout_constraintTop_toBottomOf="@+id/right_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/globe_dimen_2"
        android:background="@color/color_F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>