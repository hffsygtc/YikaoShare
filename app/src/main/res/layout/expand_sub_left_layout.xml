<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/globe_dimen_60">

    <TextView
        android:id="@+id/major_parent_name"
        android:layout_width="@dimen/globe_dimen_154"
        android:layout_height="@dimen/globe_dimen_46"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/globe_dimen_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="声乐类" />

    <ImageView
        android:id="@+id/major_parent_icon"
        android:layout_width="@dimen/globe_dimen_20"
        android:layout_height="@dimen/globe_dimen_20"
        android:background="@drawable/shape_left_angle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>