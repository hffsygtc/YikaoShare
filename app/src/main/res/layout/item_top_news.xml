<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/globe_dimen_130">

    <ImageView
        android:id="@+id/head_icon_bg"
        android:layout_width="@dimen/globe_dimen_70"
        android:layout_height="@dimen/globe_dimen_70"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:background="@drawable/blue_corner_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="@dimen/globe_dimen_60"
        android:layout_height="@dimen/globe_dimen_60"
        android:background="@mipmap/icon_fast_news"
        app:layout_constraintBottom_toBottomOf="@+id/head_icon_bg"
        app:layout_constraintEnd_toEndOf="@+id/head_icon_bg"
        app:layout_constraintStart_toStartOf="@+id/head_icon_bg"
        app:layout_constraintTop_toTopOf="@+id/head_icon_bg" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/globe_dimen_20"
        android:layout_marginEnd="@dimen/globe_dimen_30"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_text_size_28"
        app:layout_constraintBottom_toTopOf="@+id/source_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toTopOf="@+id/head_icon"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="2023年各省统考招生简章信息汇总" />

    <TextView
        android:id="@+id/source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globe_dimen_12"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_24"
        app:layout_constraintBottom_toBottomOf="@+id/head_icon"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="测试" />

    <TextView
        android:id="@+id/read_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_text_size_24"
        app:layout_constraintBaseline_toBaselineOf="@+id/source_tv"
        app:layout_constraintEnd_toEndOf="@+id/title"
        tools:text="已阅读：86512" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/custom_line_width"
        android:background="@color/color_F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/globe_dimen_30"
        android:layout_marginEnd="@dimen/globe_dimen_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>